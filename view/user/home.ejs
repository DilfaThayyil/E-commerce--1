<script>

        

    // Function to handle addition of a product to the cart on the frontend
    const addToCart = async (productId,quantity) => {
        try {
            const quantity = 1
            console.log(quantity);
            const response = await fetch(`/addtocart/${productId}/${quantity}`, {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json' 
            },
            
            });
            const data = await response.json();
            if (data.error) {
                swal({
                title: "Error!",
                text: data.error,
                icon: "error",
                button: "OK",
            });
            } else if (data.message) {
            swal({
                title: "Success!",
                text: data.message,
                icon: "success",
                button: "OK",
            }).then((value) => {
                window.location.reload(); 
            });
                
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };
    
    
</script>
